<?xml version="1.0" encoding="utf8"?>
<!DOCTYPE web-app
PUBLIC "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
"http://java.sun.com/dtd/web-app_2_3.dtd">
<web-app>
  <filter>
    <filter-name>App</filter-name>
    <display-name>northeastscala</display-name>
    <filter-class>com.meetup.App</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>App</filter-name>
    <url-pattern>/*</url-pattern>
    <dispatcher>REQUEST</dispatcher>
    <dispatcher>FORWARD</dispatcher>
  </filter-mapping>

  <security-constraint>
    <web-resource-collection>
      <url-pattern>/tally/*</url-pattern>
    </web-resource-collection>
    <auth-constraint>
      <role-name>admin</role-name>
    </auth-constraint>
  </security-constraint>

  <mime-mapping>
    <extension>html</extension>
    <mime-type>text/html; charset=utf-8</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>css</extension>
    <mime-type>text/css; charset=utf-8</mime-type>
  </mime-mapping>
  <mime-mapping>
    <extension>js</extension>
    <mime-type>text/javascript; charset=utf-8</mime-type>
  </mime-mapping>
</web-app>
